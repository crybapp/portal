    "@types/ws": "^8.5.3",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vercel/ncc": "^0.34.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "jsonwebtoken": "^8.5.1",
    "keysym": "^0.0.6",
    "process-exists": "^5.0.0",
    "typescript": "^4.7.4",
    "ws": "^8.8.1",
    "yargs": "^17.5.1"
  }
